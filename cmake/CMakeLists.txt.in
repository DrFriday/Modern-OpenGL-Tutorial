# ===== External Libraries =====
cmake_minimum_required(VERSION 3.10)

project(external-libraries NONE)

include(ExternalProject)

ExternalProject_Add(googletest
  GIT_REPOSITORY    https://github.com/google/googletest.git
  GIT_TAG           master
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googletest-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/googletest-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)

ExternalProject_Add(glew
  GIT_REPOSITORY    https://github.com/Perlmint/glew-cmake
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/glew-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/glew-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)

ExternalProject_Add(glm
  GIT_REPOSITORY    https://github.com/g-truc/glm
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/glm-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/glm-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
)

ExternalProject_Add(sdl2
  GIT_REPOSITORY    https://github.com/spurious/SDL-mirror
  SOURCE_DIR        "${CMAKE_CURRENT_BINARY_DIR}/sdl2-src"
  BINARY_DIR        "${CMAKE_CURRENT_BINARY_DIR}/sdl2-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
  PREFIX            "SLD2"
)
